<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical" >

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/home_buttons_mengzhao"
            style="@style/home_button_style"
            android:text="吃货萌照" />
         <Button
            android:id="@+id/home_buttons_szhw"
            style="@style/home_button_style"
            android:text="山珍海味"
            android:layout_marginLeft="10dip" />
          <Button
            android:id="@+id/home_buttons_xckc"
            style="@style/home_button_style"
            android:layout_marginLeft="10dip"
            android:text="小吃快餐" />
           <Button
            android:id="@+id/home_buttons_ccdf"
            android:layout_marginLeft="10dip"
            style="@style/home_button_style"
            android:text="粗茶淡饭" />
        
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/home_buttons_ttsy"
            style="@style/home_button_style"
            android:text="饕鶗盛宴" />
         <Button
            android:id="@+id/home_buttons_zizhu"
            style="@style/home_button_style"
            android:text="自助"
            android:layout_marginLeft="10dip" />
          <Button
            android:id="@+id/home_buttons_sc"
            style="@style/home_button_style"
            android:text="烧烤"
            android:layout_marginLeft="10dip" />
           <Button
            android:id="@+id/home_buttons_yp"
            style="@style/home_button_style"
            android:layout_marginLeft="10dip"
            android:text="饮品" />
        
    </LinearLayout>
</LinearLayout>